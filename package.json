    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "5",
    "eslint-plugin-standard": "5",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "prettier": "^2.3.0",
